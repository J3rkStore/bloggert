<div class='text-center post'>
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

<div class='comment'>
  <h3>add a comment:</h3>
  <form class='form new-comment-form'>
    <div class='form-group'>
      <label for='comment-name'></label>
      <textarea
        class='form-input comment-text'
        id='comment-name'
        name='comment'
      ></textarea>
    </div>
    <div class='form-group'>
      <button type='submit' class='btn submit-button'>Submit comment</button>
    </div>
  </form>
  <div>
    <input type='hidden' value='{{id}}' id='post-id' />
  </div>
</div>

{{#if comments.length}}
  <div class='comment-list'>
    <h3>comments:</h3>
    {{#each comments as |comment|}}
      <section class='card'>
        <p class='comment-text'>{{comment.description}}</p>
        <p>
          by
          {{comment.user.name}}
          on
          {{comment.date_created}}
        </p>
      </section>
    {{/each}}
  </div>
{{/if}}

<script src='/js/postScript.js'></script>